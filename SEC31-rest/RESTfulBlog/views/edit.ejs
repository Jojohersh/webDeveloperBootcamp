<%-include("partials/header")%>
<div class="ui main text container segment">
  <div class="ui huge header">
    Edit "<%=blog.title%>"
  </div>
  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="title" required value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image Url</label>
      <input type="text" name="blog[image]" placeholder="image" required value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" rows="8" cols="80" required ><%=blog.body%></textarea>
    </div>
    <input class="ui inverted big green button" type="submit" value="Submit">
  </form>
</div>
<%-include("partials/footer")%>
